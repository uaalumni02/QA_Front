                                <a class="nav-link" href="http://localhost:8080/express">${response[1].topic}</a>
                                <a class="nav-link active" href="#">${response[2].topic}</a>
                                <a class="nav-link" href="http://localhost:8080/node">${response[3].topic}</a>
                            </li>`
            const topicContainer = document.getElementById("topic");
            topicContainer.innerHTML = html;
        })
        .catch(error => console.error('Error:', error));


