<script>
    let user = ""
    window.addEventListener("load", (req, res) => {
        var url = window.location.pathname;
        var id = url.substring(url.lastIndexOf('/') + 1)
        const token = localStorage.getItem('token');
        const bearer = 'Bearer ' + token
        fetch('http://localhost:3000/api/question/' + id, {
            method: "GET",
            headers: {
                'Authorization': bearer,
            }
        })
            .then(res => res.json())
            .then(response => {
                user = response.user._id;
                let html = '';
                html += `<br></br>`
                html += `<h6 style="text-align: center">${response.question}? Posted By: ${response.user.username} </h6>`;
                html += `<p style="text-align: center">${response.description}</p>`;

                const questionContainer = document.getElementById("question");
                questionContainer.innerHTML = html;

            })
            .catch(error => console.error('Error:', error));
    })

    //post answer
    const submitAnswer = () => {
        var url = window.location.pathname;
        var question = url.substring(url.lastIndexOf('/') + 1)
        let answer = document.getElementById("answer").value;
        const token = localStorage.getItem('token');
        const bearer = 'Bearer ' + token

        fetch('http://localhost:3000/api/answer/', {
            method: "post",
            headers: {
                'Authorization': bearer,
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                answer: answer,
                question: question,
                user: user,

            })
        })
            .then(res => res.json())
            .then(response => {
            }).catch(error => console.error('Error:', error));
            window.location.reload();
        $('#answerForm').get(0).reset();
    }
    //get answer by question id
    const token = localStorage.getItem('token');
    const bearer = 'Bearer ' + token
    let url = window.location.pathname;
    let question = url.substring(url.lastIndexOf('/') + 1)
    fetch('http://localhost:3000/api/answer/' + question, {
        method: "GET",
        headers: {
            'Authorization': bearer,
        }
    })
        .then(res => res.json())
        .then(response => {
            let html = '';
            for (var i = 0; i < response.length; i++) {
                html += `<p>Answer: ${response[i].answer}</p>`
            }
            const answerContainer = document.getElementById("questionAnswer");
            answerContainer.innerHTML = html;
        })
        .catch(error => console.error('Error:', error));

</script>

