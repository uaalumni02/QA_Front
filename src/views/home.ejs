<script>
    const token = localStorage.getItem('token');
    const bearer = 'Bearer ' + token
    fetch('http://localhost:3000/api/question/', {
        method: "GET",
        headers: {
            'Authorization': bearer,
        }
    })
        .then(res => res.json())
        .then(response => {
            console.log(response[0].user.username)
            let html = '';
            for (var i = 0; i < response.length; i++) {
                html += `<h6>${response[i].question}? Posted By: ${response[i].user.username} </h6>`;
            }

            const questionContainer = document.getElementById("question");
            questionContainer.innerHTML = html;
        })
        .catch(error => console.error('Error:', error));

    fetch('http://localhost:3000/api/topic/', {
        method: "GET",
        headers: {
            'Authorization': bearer,
        }
    })
        .then(res => res.json())
        .then(response => {
            let html = '';
            for (var i = 0; i < response.length; i++) {
                //pass id and load question based on id next page when clicked can also pull topic name from object 
                html += `<li class="nav-item">
                        <a class="nav-link" href="#">${response[i].topic}</a>
                    </li>`
            }
            const topicContainer = document.getElementById("topic");
            topicContainer.innerHTML = html;
            `<div>
                        <a class="dropdown-item" href="#">${response.topic}</a>
                    </div>`

            const modalTopicContainer = document.getElementById("modalTopic");
            modalTopicContainer.innerHTML = html;
        })

        .catch(error => console.error('Error:', error));

</script>

